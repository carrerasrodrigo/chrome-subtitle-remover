{
  "manifest_version": 2,

  "name": "Remove subtitles from Netflix",
  "description": "This extension allows to remove netflix subtitles",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Netflix Disable/Enable subtitles"
  },
  "permissions": [
    "https://www.netflix.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
